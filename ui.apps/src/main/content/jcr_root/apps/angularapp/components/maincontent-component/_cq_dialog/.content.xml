<jcr:root xmlns:jcr="http://www.jcp.org/jcr/1.0"
          xmlns:cq="http://www.day.com/jcr/cq/1.0"
          xmlns:granite="http://www.adobe.com/jcr/granite/1.0"
          xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          xmlns:sling="http://sling.apache.org/jcr/sling/1.0"
          jcr:primaryType="nt:unstructured"
          jcr:title="Maincontent"
          sling:resourceType="cq/gui/components/authoring/dialog">
   <content jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/coral/foundation/container">
      <layout jcr:primaryType="nt:unstructured"
              margin="{Boolean}false"
              sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
      <items jcr:primaryType="nt:unstructured">
         <column jcr:primaryType="nt:unstructured"
                 sling:resourceType="granite/ui/components/coral/foundation/container">
            <items jcr:primaryType="nt:unstructured">
               <attributes composite="{Boolean}true"
                           fieldLabel="Digite um texto"
                           jcr:primaryType="nt:unstructured"
                           sling:resourceType="granite/ui/components/coral/foundation/form/multifield">
                  <field cq-msm-lockable="./attributes"
                         jcr:primaryType="nt:unstructured"
                         name="./attributes"
                         sling:resourceType="granite/ui/components/foundation/form/fieldset">
                     <items jcr:primaryType="nt:unstructured">
                        <type fieldLabel="Escolha o tipo de texto"
                              jcr:primaryType="nt:unstructured"
                              name="./type"
                              sling:resourceType="granite/ui/components/coral/foundation/form/textfield"/>
                        <text fieldLabel="Digite seu texto"
                              jcr:primaryType="nt:unstructured"
                              name="./text"
                              sling:resourceType="granite/ui/components/coral/foundation/form/textfield"/>
                     </items>
                  </field>
               </attributes>
               <buttonType cq-msm-lockable="./buttonType"
                           fieldLabel="Escolha o tipo do botão"
                           jcr:primaryType="nt:unstructured"
                           name="./buttonType"
                           sling:resourceType="granite/ui/components/coral/foundation/form/textfield"/>
               <buttonText cq-msm-lockable="./buttonText"
                           fieldLabel="Escolha o texto do botão"
                           jcr:primaryType="nt:unstructured"
                           name="./buttonText"
                           sling:resourceType="granite/ui/components/coral/foundation/form/textfield"/>
               <imageSrcResType jcr:primaryType="nt:unstructured"
                                name="./imageSrc/sling:resourceType"
                                sling:resourceType="granite/ui/components/coral/foundation/form/hidden"
                                value="core/wcm/components/image/v2/image"/>
               <imageSrc allowUpload="{Boolean}false"
                         autoStart="{Boolean}false"
                         class="cq-droptarget"
                         cq-msm-lockable="./imageSrc/file"
                         fieldLabel="Imagem"
                         fileNameParameter="./imageSrc/fileName"
                         fileReferenceParameter="./imageSrc/fileReference"
                         jcr:primaryType="nt:unstructured"
                         mimeTypes="[image/gif,image/jpeg,image/png,image/webp,image/tiff,image/svg+xml]"
                         multiple="{Boolean}false"
                         name="./imageSrc/file"
                         sling:resourceType="cq/gui/components/authoring/dialog/fileupload"
                         title="Drag to select image"
                         uploadUrl="${suffix.path}"
                         useHTML5="{Boolean}true"/>
               <imageAlt cq-msm-lockable="./imageAlt"
                         fieldLabel="Texto alternativo"
                         jcr:primaryType="nt:unstructured"
                         name="./imageAlt"
                         sling:resourceType="granite/ui/components/coral/foundation/form/textfield"/>
            </items>
         </column>
      </items>
   </content>
</jcr:root>
